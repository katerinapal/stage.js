{
    "name": "stage-js",
    "version": "0.8.10",
    "description": "2D JavaScript library for cross-platform HTML5 game development",
    "homepage": "http://piqnt.com/stage.js/",
    "keywords": [
        "html5",
        "game",
        "rendering",
        "engine",
        "2d",
        "canvas",
        "mobile"
    ],
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git://github.com/shakiba/stage.js.git"
    },
    "main": "lib/index.js",
    "files": [
        "doc/",
        "ext/",
        "lib/",
        "platform/",
        "test/"
    ],
    "devDependencies": {
        "browserify": "^8.1.3",
        "browserify-middleware": "^7.0.0",
        "expect.js": "*",
        "express": "^4.13.4",
        "gulp": "*",
        "gulp-browserify": "*",
        "gulp-bump": "*",
        "gulp-concat": "*",
        "gulp-header": "^1.7.1",
        "gulp-mocha": "*",
        "gulp-rename": "^1.2.0",
        "gulp-uglify": "*",
        "gulp-util": "^3.0.5",
        "gulp-wrap": "*",
        "minimist": "*",
        "sandboxed-module": "^2.0.0",
        "serve-index": "^1.7.3",
        "sinon": "*",
        "uglifyify": "^3.0.1",
        "vinyl-buffer": "^1.0.0",
        "vinyl-source-stream": "^1.0.0",
        "vinyl-transform": "^1.0.0",
        "babel-cli": "latest",
        "babel-core": "latest",
        "babel-plugin-add-module-exports": "latest",
        "babel-plugin-transform-es2015-modules-commonjs": "latest",
        "babel-polyfill": "latest",
        "babel-plugin-transform-object-rest-spread": "latest",
        "babel-preset-env": "latest"
    },
    "scripts": {
        "test": "mocha test/*.js",
        "dist": "gulp",
        "dev": "node server.js",
        "compile-libutil": "babel lib\\util --out-dir lib\\util --require babel-polyfill --presets env",
        "compile-platform": "babel platform --out-dir platform --require babel-polyfill --presets env",
        "compile-test": "babel test --out-dir test --require babel-polyfill --presets env",
        "compile-libloader": "babel lib\\loader --out-dir lib\\loader --require babel-polyfill --presets env",
        "compile-lib": "babel lib --out-dir lib --require babel-polyfill --presets env",
        "compile-testutil": "babel test\\util --out-dir test\\util --require babel-polyfill --presets env",
        "compile-libaddon": "babel lib\\addon --out-dir lib\\addon --require babel-polyfill --presets env",
        "compile-serverjs": "babel server.js -o server.js --require babel-polyfill --presets env",
        "compile-gulpfilejs": "babel gulpfile.js -o gulpfile.js --require babel-polyfill --presets env",
        "compile-1_script": "npm run compile-libutil && npm run compile-platform && npm run compile-test && npm run compile-libloader && npm run compile-lib && npm run compile-testutil && npm run compile-libaddon && npm run compile-serverjs && npm run compile-gulpfilejs",
        "compile": "npm run compile-1_script"
    }
}